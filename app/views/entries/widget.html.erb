  color: <%= @primary_color %> -->
<%# end %>

<div id="widget_wrapper">
  <ul>
  <% @search.entries.each do |entry| %>
    <li class="<%= cycle('even', 'odd') %>">
      <%= link_to truncate(entry.title, 70), entry_path(entry), :class => 'title' %>
      
      <div class="arrowholder">
        <a class="arrow" href="#"></a>
      </div>
      
      <div class="full">
    
        <%#= raise entry.inspect %>
        <dl>
          <dt>Title</dt>
          <dd><%= truncate(entry.title, 200) %></dd>
        
          <dt>Agency</dt>
          <dd><%= entry.agency.name %></dd>
        
          <dt>Date</dt>
          <dd><%= entry.publication_date %></dd>

          <dt>Type</dt>
          <dd><%= entry.type %></dd>
          
          <dt>Abstract</dt>
          <dd><%= truncate(entry.abstract, 600) %></dd>
        </dl>
                
      </div>
    </li>
  <% end %>
  </ul>
  <div id="info_pane">
    <div id="widget_nav">
      <a href="#" title="Back" id="back">Back</a> <a href="#" title="View Entry" id="view_entry">View entry</a>
    </div>
    <div id="info_content">
    </div>  
  </div>
</div>